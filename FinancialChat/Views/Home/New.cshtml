@using Antlr.Runtime.Tree
@model FinancialChat.ViewModels.ChatRoomViewModel
@{
    ViewBag.Title = "New Chat Room";
}

<h2>New Chat Room</h2>
@using (Html.BeginForm("Save", "Home"))
{
    @Html.ValidationSummary(true, "Please review the errors below.")
    <div class="form-group">
        @Html.LabelFor(m => m.Name,"Chat Room Name")
        @Html.TextBoxFor(m => m.Name,new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    @Html.HiddenFor(Model => Model.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button> @Html.ActionLink("Cancel","Index","Home",new { @class = "btn"} )
}

